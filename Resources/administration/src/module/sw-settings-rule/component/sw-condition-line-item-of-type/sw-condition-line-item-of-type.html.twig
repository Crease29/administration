{% block sw_condition_fields %}
    {% block sw_condition_fields_operator %}
        <sw-field type="select"
                  name="operator"
                  v-model="condition.value.operator"
                  class="field field--select has--arrow">
            <template slot="options">
                <option v-for="operator in operators" :value="operator.identifier">
                    {{ $tc(operator.label) }}
                </option>
            </template>
        </sw-field>
    {% endblock %}
    {% block sw_condition_fields_value %}
        <sw-field type="select"
                  :name="lineItemType"
                  v-model="condition.value.lineItemType"
                  class="field field--main field--select">
            <template slot="options">
                <option v-for="(lineItemType, identifier) in lineItemTypes" :value="identifier">
                    {{ $tc(lineItemType.label) }}
                </option>
            </template>
        </sw-field>
    {% endblock %}
{% endblock %}