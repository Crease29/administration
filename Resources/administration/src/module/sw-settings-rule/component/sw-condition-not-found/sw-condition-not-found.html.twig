{% block sw_condition_fields %}
    {% block sw_condition_fields_value %}
        <sw-field type="text"
                  class="field field--main field--error"
                  :placeholder="$tc('global.sw-condition.condition.not-found.label')"
                  :disabled="true">
            <template slot="suffix">
                <sw-help-text :text="errorMessage" :width="200" tooltipPosition="top">
                </sw-help-text>
            </template>
        </sw-field>
    {% endblock %}
{% endblock %}