{% block sw_condition_fields %}
<sw-select id="id"
           :store="getProductStore()"
           class="sw-condition-group__field is--secondary"
           v-model="condition.value.id">
</sw-select>
<sw-field type="select"
          name="operator"
          v-model="condition.value.operator"
          class="field--operator">
    <template slot="options">
        <option v-for="(operator, identifier) in operators" :value="operator.identifier">
            {{ $tc(operator.label) }}
        </option>
    </template>
</sw-field>
<sw-field id="quantity"
          type="number"
          step="1"
          class="field--value is--secondary"
          v-model="condition.value.quantity">
</sw-field>
{% endblock %}