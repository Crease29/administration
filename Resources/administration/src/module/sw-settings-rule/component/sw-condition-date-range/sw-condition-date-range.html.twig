{% block sw_condition_fields %}
    {% block sw_condition_fields_value %}
        <sw-field type="switch"
                  name="useTime"
                  :label="$tc('global.sw-condition.condition.dateRangeRule.useTime')"
                  v-model="useTime"
                  class="field field--switch has--arrow">
        </sw-field>
        <sw-field :type="condition.value.useTime ? 'datetime' : 'date'"
                  name="fromDate"
                  :datepickerConfig="datepickerConfig"
                  v-model="fromDate"
                  class="field field--main field--date has--arrow">
        </sw-field>
        <sw-field :type="condition.value.useTime ? 'datetime' : 'date'"
                  name="toDate"
                  :datepickerConfig="datepickerConfig"
                  v-model="toDate"
                  class="field field--main field--date">
        </sw-field>
    {% endblock %}
{% endblock %}