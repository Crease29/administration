{% block sw_media_index %}
    <sw-page class="sw-media-index">
        <template slot="content">
            {% block sw_media_index_page_content %}
                <div class="sw-media-index__page">
                    {% block sw_media_index_content %}
                        <div class="sw-media-index__content">
                            {% block sw_media_index_catalogs %}
                                {% block sw_media_index_catalogs_title %}
                                    <h3>{{ $tc('sw-media.index.catalogs') }}</h3>
                                {% endblock %}

                                {% block sw_media_index_catalogs_grid %}
                                    <sw-media-grid previewType="media-grid-preview-as-grid"
                                                   previewComponent="sw-media-grid-catalog-item"
                                                   :selectable="false"
                                                   :items="catalogs">
                                    </sw-media-grid>
                                {% endblock %}

                                {% block sw_media_index_catalogs_divider %}
                                    <hr class="sw-media-index__divider">
                                {% endblock %}
                            {% endblock %}

                            {% block sw_media_index_last_added_items %}
                                {% block sw_media_index_last_added_items_title %}
                                    <h3>{{ $tc('sw-media.index.lastAdded') }}</h3>
                                {% endblock %}

                                {% block sw_media_index_last_added_items_grid %}
                                    <sw-media-grid previewType="media-grid-preview-as-grid"
                                           previewComponent="sw-media-grid-media-item"
                                           :editable="true"
                                           :selectable="true"
                                           :items="lastAddedMediaItems"
                                           ref="gridLastAdded"
                                           v-on="mediaMediaGridListener">
                                    </sw-media-grid>
                                {% endblock %}
                            {% endblock %}
                        </div>
                    {% endblock %}

                    {% block sw_media_index_sidebar %}
                        <div class="sw-media-index__sidebar">
                            <sw-media-sidebar
                                :item="lastSelectedItem"
                                v-on="mediaSidebarListener">
                            </sw-media-sidebar>
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
            <sw-media-modal-delete :itemsToDelete = "selectionToDelete"
                @sw-media-modal-delete-close="closeDeleteModal"
                @sw-media-modal-delete-delete="deleteSelection">
            </sw-media-modal-delete>
        </template>
    </sw-page>
{% endblock %}