{% block sw_media_modal_delete %}
    <sw-modal v-if="showModal"
              variant="small"
              class="sw-media-modal-delete"
              @closeModal="closeDeleteModal($event)"
              :title="$tc('sw-media.modalDelete.modalHeader')">

        {% block sw_media_modal_body %}
            {{ $tc('sw-media.modalDelete.deleteMessage', itemsToDelete.length, { mediaName: itemsToDelete[0].name, count: itemsToDelete.length }) }}
        {% endblock %}

        {% block sw_media_modal_footer %}
            <template slot="modal-footer">

                {% block sw_media_modal_delete_cancel_button %}
                    <sw-button @click="closeDeleteModal($event)" size="small">
                        {{ $tc('sw-media.modalDelete.modalButtonAbort') }}
                    </sw-button>
                {% endblock %}

                {% block sw_media_modal_delete_confirm_button %}
                    <sw-button @click="deleteSelection($event)" size="small" variant="primary">
                        {{ $tc('sw-media.modalDelete.modalButtonDelete') }}
                    </sw-button>
                {% endblock %}

            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}