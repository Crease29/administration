{% block sw_media_modal_replace %}
    <sw-modal class="sw-media-modal-replace"
              v-if="showReplaceModal"
              :title="$tc('sw-media.modalReplace.modalTitle')"
              @closeModal="emitCloseReplaceModal">

        {% block sw_media_modal_replace_upload_container %}
            <sw-media-upload-container
                :multipleFiles="false"
                @sw-media-upload-container-publish-selection="handleUploadData">
            </sw-media-upload-container>
        {% endblock %}

        {% block sw_media_modal_replace_modal_footer %}
            <template slot="modal-footer">

                {% block sw_media_modal_replace_cancel_button %}
                    <sw-button size="small" @click="emitCloseReplaceModal">
                        {{ $tc('sw-media.modalReplace.cancelButton') }}
                    </sw-button>
                {% endblock %}

                {% block sw_media_modal_replace_replace_button %}
                    <sw-button size="small" variant="primary" @click="replaceMediaItem">
                        {{ $tc('sw-media.modalReplace.replaceButton') }}
                    </sw-button>
                {% endblock %}

            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}