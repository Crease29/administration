{% block sw_media_quickinfo_multiple %}
    <div class="sw-media-quickinfo-multiple">
        {% block sw_media_quickinfo_multiple_quickactions %}
            <sw-media-collapse
                class="sw-media-quickinfo-multiple__collapse"
                :title="$tc('sw-media.sidebar.quickinfo.actions')"
                :expandOnLoading="true">

                <template slot="content">
                    {% block sw_media_quickinfo_multiple_quickactions_content %}
                        <ul class="sw-media-quickinfo-multiple__collapse-content sw-media-quickinfo-multiple__two-columns">
                            {% block sw_media_quickinfo_multiple_quickactions_move %}
                                <li v-if="next1207"
                                    class="sw-media-quickinfo-multiple__quickaction quickaction--move"
                                    @click="emitOpenFolderMove">
                                    <sw-icon small
                                             name="default-action-move-file"
                                             class="sw-media-quickinfo-multiple__quickactions-icon">
                                    </sw-icon>
                                    {{ $tc('sw-media.sidebar.actions.move') }}
                                </li>
                            {% endblock %}

                            {% block sw_media_quickinfo_multiple_quickactions_delete %}
                                <li v-if="!hasFolder"
                                    class="sw-media-quickinfo-multiple__quickaction is--danger"
                                    @click="emitOpenModalDelete">
                                    {% block sw_media_quickinfo_multiple_quickactions_delete_icon %}
                                        <sw-icon small
                                                 name="default-action-trash"
                                                 class="sw-media-quickinfo-multiple__quickactions-icon is--danger">
                                        </sw-icon>
                                    {% endblock %}

                                    {% block sw_media_quickinfo_multiple_quickactions_delete_label %}
                                        {{ $tc('sw-media.sidebar.quickinfo.delete') }}
                                    {% endblock %}
                                </li>
                            {% endblock %}

                            {% block sw_media_quickinfo_folder_quickactions_dissolve %}
                                <li v-if="!hasMedia"
                                    class="sw-media-quickinfo-multiple__quickaction quickaction--dissolve"
                                    @click="emitOpenFolderDissolve">
                                    <sw-icon small
                                             name="default-web-loading-star"
                                             class="sw-media-quickinfo-multiple__quickactions-icon">
                                    </sw-icon>
                                    {{ $tc('sw-media.sidebar.actions.dissolve') }}
                                </li>
                            {% endblock %}
                        </ul>
                    {% endblock %}
                </template>

            </sw-media-collapse>
        {% endblock %}

        {% block sw_media_quickinfo_multiple_file_names %}
            <sw-media-collapse
                    class="sw-media-quickinfo-multiple__collapse sw-media-quickinfo-multiple__collapse-streched"
                    :expandOnLoading="true"
                    :title="getFileSizeLabel">

                <template slot="content">
                    {% block sw_media_quickinfo_multiple_file_names_content %}
                        <div class="sw-media-quickinfo-multiple__collapse-content">
                            <sw-media-entity-mapper
                                v-for="mediaItem in items"
                                :key="mediaItem.id"
                                :item="mediaItem"
                                :selected="false"
                                :isList="true"
                                :showContextMenuButton="false"
                                :showSelectionIndicator="false">
                            </sw-media-entity-mapper>
                        </div>
                    {% endblock %}
                </template>
            </sw-media-collapse>
        {% endblock %}
    </div>
{% endblock %}

