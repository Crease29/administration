{% block sw_media_sidebar %}
    <div class="sw-media-sidebar">
        {% block sw_media_sidebar_headline %}
            <h3 v-if="headLine" class="sw-media-sidebar__headline">{{ headLine }}</h3>
        {% endblock %}

        {% block sw_media_sidebar_item_quickinfo_content %}
            <div class="sw-media-sidebar__quickinfo-scroll-container">
                <sw-media-quickinfo
                    v-if="isSingleFile && firstEntity.entityName === 'media'"
                    :item="firstEntity"
                    v-on="$listeners">
                </sw-media-quickinfo>

                <sw-media-folder-info
                    v-else-if="isSingleFile && firstEntity.entityName === 'media_folder'"
                    :mediaFolder="firstEntity"
                    v-on="$listeners">
                </sw-media-folder-info>

                <sw-media-quickinfo-multiple
                    v-else-if="isMultipleFile"
                    :items="items"
                    v-on="$listeners">
                </sw-media-quickinfo-multiple>

                <sw-media-folder-info
                    v-else-if="currentFolder"
                    :mediaFolder="currentFolder"
                    v-on="$listeners">
                </sw-media-folder-info>

                <div v-else class="sw-media-sidebar__item-info"> TODO: Illustration keine Medien sobald verf√ºgbar...</div>
            </div>
        {% endblock %}
    </div>
{% endblock %}