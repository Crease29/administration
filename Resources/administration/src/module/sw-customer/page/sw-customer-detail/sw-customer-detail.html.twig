{% block sw_customer_detail %}
    <sw-page class="sw-customer-detail">

        {% block sw_customer_detail_header %}
            <template slot="smart-bar-header">
                <h2 v-if="customer.firstName || customer.lastName">{{ customer.firstName + ' ' + customer.lastName }}</h2>
                <h2 v-else>Neuer Kunde</h2>
            </template>
        {% endblock %}

        {% block sw_customer_detail_actions %}
            <template slot="smart-bar-actions">
                {% block sw_customer_detail_actions_abort %}
                    <sw-button :disabled="isLoading" link="sw.customer.index" @click.prevent="onAbort">
                        Abbrechen
                    </sw-button>
                {% endblock %}

                {% block sw_customer_detail_actions_save %}
                    <sw-button variant="primary" :disabled="isLoading" @click.prevent="onSave">
                        Speichern
                    </sw-button>
                {% endblock %}
            </template>
        {% endblock %}

        {% block sw_customer_detail_content %}
            <sw-card-view slot="content">
                {% block sw_customer_detail_content_tabs %}
                    <sw-tabs class="sw-customer-detail-page__tabs">
                        <sw-tabs-item :route="{ name: 'sw.customer.detail.base', params: { id: $route.params.id } }" title="Allgemein">Allgemein</sw-tabs-item>
                    </sw-tabs>
                {% endblock %}

                {% block sw_customer_detail_content_view %}
                    <router-view :customer="customer" :isLoading="isLoading">
                    </router-view>
                {% endblock %}
            </sw-card-view>
        {% endblock %}
    </sw-page>
{% endblock %}
