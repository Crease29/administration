<div class="sw-login" style="display: flex; align-items: center; justify-content: center; height:100%;">
    <sw-card style="width: 400px" title="">
        <transition name="bounce">
            <div class="sw-alert" v-if="message.length && error.length">
                <strong>{{ error }}!</strong> {{ message }}
            </div>
        </transition>
        <form v-on:submit.prevent="onSubmit">
            <sw-field v-model="username" label="Username" placeholder="Your username..."></sw-field>
            <sw-field v-model="password" label="Password" type="password" placeholder="Your password..."></sw-field>

            <p class="info">
                The default username is <strong>"admin"</strong> and the default password <strong>"shopware"</strong>.
            </p>

            <sw-button :isPrimary="true">Login!</sw-button>
        </form>
    </sw-card>

    <sw-loader v-if="isWorking"></sw-loader>
</div>