{% block list %}
    <sw-workspace>

        <header class="toolbar--middle-section" slot="header">
            <h1 class="workspace--headline">
                Produkt√ºbersicht
            </h1>

            <div class="toolbar--primary-actions">
                <router-link :to="{ name: 'core.product.create' }">
                    <sw-button :isPrimary="true">
                        Neues Produkt anlegen
                    </sw-button>
                </router-link>
            </div>
        </header>

        <div class="core-product--list">
            <sw-grid>
                {% block grid_header %}
                <sw-grid-header>
                    {% block grid_header_columns %}
                    <sw-grid-col :width="50">&nbsp;</sw-grid-col>
                    <sw-grid-col :width="50">#</sw-grid-col>
                    <sw-grid-col :width="500">Name</sw-grid-col>
                    <sw-grid-col :width="450">Hersteller</sw-grid-col>
                    <sw-grid-col :width="100">Aktiv</sw-grid-col>
                    <sw-grid-col :width="100">Preis</sw-grid-col>
                    <sw-grid-col :width="150">Lager</sw-grid-col>
                    <sw-grid-col :width="100">Info</sw-grid-col>
                    {% endblock %}
                </sw-grid-header>
                {% endblock %}

                {% block grid_body %}
                <sw-grid-body>
                    {% block grid_item %}
                    <sw-grid-row v-for="(item, index) in productList" :key="item.uuid" :editable="false" :item="item">
                        {% block grid_columns %}
                        <sw-grid-col :width="50">
                            <input type="checkbox" readonly="true" />
                        </sw-grid-col>
                        <sw-grid-col :width="50">
                            {{index + 1}}
                        </sw-grid-col>
                        <sw-grid-col :width="500" data-index="name" editor="text">
                            {{item.name}}
                        </sw-grid-col>
                        <sw-grid-col :width="450">
                            {{item.manufacturer.name}}
                        </sw-grid-col>
                        <sw-grid-col :width="100">
                            <i class="icon-checkmark" v-if="item.active"></i>
                            <i class="icon-cross" v-else></i>
                        </sw-grid-col>
                        <sw-grid-col :width="100">
                           <template v-if="item.listingPrices.length > 0">
                               <span class="product--price">{{ item.listingPrices[0].price | currency }}</span>
                           </template>
                        </sw-grid-col>
                        <sw-grid-col :width="150" data-index="pseudoSales" editor="number">
                            {{item.mainDetail.stock}} auf Lager
                        </sw-grid-col>

                        <sw-grid-col :width="100">
                            <router-link class="action--edit" :to="{ name: 'core.product.detail', params: { uuid: item.uuid }}">
                                <i class="icon-document-edit"></i>
                            </router-link>
                        </sw-grid-col>
                        {% endblock %}
                    </sw-grid-row>
                    {% endblock %}
                </sw-grid-body>
                {% endblock %}

                {% block grid_pagination %}
                <sw-pagination :page="page" :max-page="maxPage" :limit="limit" :total="total" v-on:page-change="pageChange"></sw-pagination>
                {% endblock %}

                <sw-loader v-if="isWorking"></sw-loader>
            </sw-grid>
        </div>
    </sw-workspace>
{% endblock %}