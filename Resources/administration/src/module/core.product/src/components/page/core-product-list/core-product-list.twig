{% block list %}
    <sw-workspace>

        <header class="toolbar--middle-section" slot="header">
            <h1 class="workspace--headline">
                Produkt√ºbersicht
            </h1>

            <div class="toolbar--primary-actions">
                <router-link :to="{ name: 'core.product.create' }">
                    <sw-button :isPrimary="true">Neues Produkt anlegen</sw-button>
                </router-link>
            </div>
        </header>

        <div class="core-product--list">
            {% block core_product_list_grid %}
                <sw-grid :items="productList" :pagination="true" v-on:edit="onEdit">
                    {% block core_product_list_grid_slots %}

                        <template slot="columns" slot-scope="{ item }">
                            {% block core_product_list_grid_columns %}
                                <sw-grid-column flex="50px" label="#"></sw-grid-column>
                                <sw-grid-column flex="1" label="Name">{{ item.name }}</sw-grid-column>
                                <sw-grid-column flex="1" label="Manufacturer">{{ item.manufacturer.name }}</sw-grid-column>
                                <sw-grid-column flex="100px" label="Active"><i class="icon-checkmark" v-if="item.active"></i><i class="icon-cross" v-else></i></sw-grid-column>
                                <sw-grid-column flex="100px" label="Price">{{ item.mainDetail.prices[0].price | currency }}</sw-grid-column>
                                <sw-grid-column flex="200px" label="Stock">{{ item.mainDetail.stock }} in stock</sw-grid-column>
                            {% endblock %}
                        </template>

                        <template slot="pagination">
                            {% block core_product_list_grid_pagination %}
                                <sw-pagination :page="page" :max-page="maxPage" :limit="limit" :total="total" v-on:page-change="pageChange"></sw-pagination>
                            {% endblock %}
                        </template>
                    {% endblock %}
                </sw-grid>
            {% endblock %}

            <sw-loader v-if="isWorking"></sw-loader>
        </div>
    </sw-workspace>
{% endblock %}