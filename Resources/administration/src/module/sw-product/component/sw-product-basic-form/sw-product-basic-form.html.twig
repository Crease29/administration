{% block sw_product_basic_form %}
    <div class="product-basic-form">

        {% block sw_product_basic_form_title_field %}
            <sw-field type="text"
                      :label="$tc('sw-product.basicForm.labelTitle')"
                      :placeholder="$tc('sw-product.basicForm.placeholderTitle')"
                      name="title"
                      v-model="product.name">
            </sw-field>
        {% endblock %}

        {% block sw_product_basic_form_description_field %}
            <sw-field type="textarea"
                      :label="$tc('sw-product.basicForm.labelDescription')"
                      :placeholder="$tc('sw-product.basicForm.placeholderDescription')"
                      name="descriptionLong"
                      v-model="product.descriptionLong">
            </sw-field>
        {% endblock %}

        <sw-container grid="1fr 1fr" gap="0px 30px">
            {% block sw_product_basic_form_id_field %}
                <sw-field type="text"
                          :label="$tc('sw-product.basicForm.labelProductNumber')"
                          :placeholder="$tc('sw-product.basicForm.placeholderProductNumber')"
                          name="id"
                          :value="product.id">
                </sw-field>
            {% endblock %}

            {% block sw_product_basic_form_manufacturer_field %}
                <sw-field type="select"
                          :label="$tc('sw-product.basicForm.labelManufacturer')"
                          :placeholder="$tc('sw-product.basicForm.placeholderManufacturer')"
                          name="manufacturer"
                          v-model="product.manufacturerId">
                    {% block sw_product_basic_form_manufacturer_field_options %}
                        <option slot="options" v-for="manufacturer in manufacturers" :value="manufacturer.id">{{ manufacturer.name }}</option>
                    {% endblock %}
                </sw-field>
            {% endblock %}
        </sw-container>
    </div>
{% endblock %}
