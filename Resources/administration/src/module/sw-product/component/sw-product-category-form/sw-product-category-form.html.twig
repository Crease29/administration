{% block sw_product_category_form %}
    <div class="sw-product-category-form">

        {% block sw_product_category_form_content %}
            {% block sw_product_category_form_catalog_field %}
                <sw-field type="select"
                          :label="$tc('sw-product.categoryForm.labelCatalog')"
                          :placeholder="$tc('sw-product.categoryForm.placeholderCatalog')"
                          validation="required"
                          @change="onChangeCatalog"
                          v-model="product.catalogId">
                    <option slot="options" v-for="catalog in catalogs" :value="catalog.id">{{ catalog.name }}</option>
                </sw-field>
            {% endblock %}

            {% block sw_product_category_form_category_field %}
                <sw-select id="categories"
                           multi
                           class="sw-product-detail__category-select"
                           ref="multiSelectCategories"
                           :label="$tc('sw-product.categoryForm.labelCategory')"
                           :placeholder="$tc('sw-product.categoryForm.placeholderCategory')"
                           :serviceProvider="categoryService"
                           :store="categoriesStore"
                           :criteria="criteria"
                           :disabled="!hasCriteria"
                           v-model="product.categories">
                </sw-select>
            {% endblock %}
        {% endblock %}
    </div>
{% endblock %}