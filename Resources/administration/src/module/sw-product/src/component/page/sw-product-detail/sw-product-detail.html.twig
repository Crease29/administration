<sw-workspace>
    <header class="toolbar--middle-section" slot="header" v-if="isLoaded">
        <h1 class="workspace--headline">
            <span v-if="product.name">{{ product.name }} <span v-if="product.manufacturer" class="is--small">von {{ product.manufacturer.name }}</span></span>
            <span v-else class="headline--empty">(neues Produkt)</span>
        </h1>

        <div class="toolbar--primary-actions">
            <sw-button :isDisabled="isLoading" link="sw.product.index">
                Abbrechen
            </sw-button>

            <sw-button :isPrimary="true" :isDisabled="isLoading" @click.prevent="onSave">
                Speichern
            </sw-button>
        </div>
    </header>

    <div class="sw-product--detail" slot="default" v-if="isLoaded">
        <ul class="container--tabs">
            <li class="tabs--item router-link-active">
                <a href="#" class="item--link">
                    Allgemein
                </a>
            </li>
            <li class="tabs--item">
                <a href="#" class="item--link">
                    Cross Selling
                </a>
            </li>
            <li class="tabs--item">
                <a href="#" class="item--link">
                    Tab
                </a>
            </li>
            <li class="tabs--item">
                <a href="#" class="item--link">
                    Tab
                </a>
            </li>
            <li class="tabs--item">
                <a href="#" class="item--link">
                    Tab
                </a>
            </li>
        </ul>

        <sw-product-basic-form :product="product" :manufacturers="manufacturers" :taxRates="taxRates" :serviceProvider="categoryService"></sw-product-basic-form>

        <!-- TODO: Remove test notifications -->
        <sw-card title="Notifications Test">
            <h2>Notifications</h2>
            <sw-button @click="addNotificationInfo">Info</sw-button>
            <sw-button @click="addNotificationWarning">Warning</sw-button>
            <sw-button @click="addNotificationSuccess">Success</sw-button>
            <sw-button @click="addNotificationError">Error</sw-button>
            <p>&nbsp;</p>
            <h2>System notifications</h2>
            <sw-button @click="addSystemNotificationInfo">Info</sw-button>
            <sw-button @click="addSystemNotificationWarning">Warning</sw-button>
            <sw-button @click="addSystemNotificationSuccess">Success</sw-button>
            <sw-button @click="addSystemNotificationError">Error</sw-button>
        </sw-card>

        {% block core_product_detail_workspace_additional %}{% endblock %}
    </div>

    <sw-loader v-if="isLoading"></sw-loader>
</sw-workspace>
