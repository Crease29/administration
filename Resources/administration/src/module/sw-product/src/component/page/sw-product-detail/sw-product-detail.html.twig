<sw-workspace>
    <header class="toolbar--middle-section" slot="header">
        <h1 class="workspace--headline">
            <span v-if="product.name">{{ product.name }} <span v-if="product.manufacturer" class="is--small">von {{ product.manufacturer.name }}</span></span>
            <span v-else class="headline--empty">(neues Produkt)</span>
        </h1>

        <div class="toolbar--primary-actions">
            <sw-button :isDisabled="isWorking" link="core.product.index">
                Abbrechen
            </sw-button>

            <sw-button :isPrimary="true" :isDisabled="isWorking" @click.prevent="onSave">
                Speichern
            </sw-button>
        </div>
    </header>

    <div class="sw-product--detail" slot="default">
        <ul class="container--tabs">
            <li class="tabs--item router-link-active">
                <a href="#" class="item--link">
                    Allgemein
                </a>
            </li>
            <li class="tabs--item">
                <a href="#" class="item--link">
                    Cross Selling
                </a>
            </li>
            <li class="tabs--item">
                <a href="#" class="item--link">
                    Tab
                </a>
            </li>
            <li class="tabs--item">
                <a href="#" class="item--link">
                    Tab
                </a>
            </li>
            <li class="tabs--item">
                <a href="#" class="item--link">
                    Tab
                </a>
            </li>
        </ul>

        <sw-product-basic-form :product="product" :manufacturers="manufacturers" :isWorking="isWorking" :serviceProvider="categoryService"></sw-product-basic-form>

        <sw-card title="Preise">
            <sw-form-grid :columns="priceColumns" :items="product.prices"></sw-form-grid>
            <sw-loader v-if="isWorking"></sw-loader>
        </sw-card>

        {% block core_product_detail_workspace_additional %}{% endblock %}
    </div>
</sw-workspace>
