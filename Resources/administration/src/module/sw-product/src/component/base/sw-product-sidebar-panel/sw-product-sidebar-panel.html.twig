<div class="sw-product-sidebar__panel">
    <button class="sw-product-sidebar__button" :class="{ 'is-active': isExpanded }" @click="toggleContentPanel">
        <sw-icon :name="icon" :title="title"></sw-icon>
    </button>

    <div class="sw-product-sidebar__panel-content" v-if="isExpanded">
        <h1 class="sw-product-sidebar__panel-headline">{{ title }}</h1>
        <slot></slot>
    </div>
</div>