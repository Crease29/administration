<sw-card title="Bestellungsinformationen" description="Bestellungs-Informationen fÃ¼r Bestellung">

    <div class="split--container">
        <div class="container--item">
            <sw-field label="Customer" id="customer" type="select" name="customer" placeholder="The customer" v-model="order.customerId">
                <option v-for="customer in customers" :value="customer.id">{{ customer.firstName }} {{ customer.lastName }}</option>
            </sw-field>
        </div>
        <div class="container--item">
            <sw-field label="Shop" id="shopId" type="select" name="shopId" v-model="order.shopId">
                <option v-for="shop in shops" :value="shop.id">{{ shop.name }}</option>
            </sw-field>
        </div>
    </div>

    <div class="split--container">
        <div class="container--item">
            <sw-field label="Order date" id="orderDate" type="datetime" name="orderDate" v-model="order.date"></sw-field>
        </div>
        <div class="container--item">
            <sw-field label="Order state" id="stateId" type="select" name="stateId" v-model="order.stateId">
                <option v-for="orderState in orderStates" :value="orderState.id">{{ orderState.description }}</option>
            </sw-field>
        </div>
    </div>

    <div class="split--container">
        <div class="container--item">
            <sw-field label="Payment method" id="paymentMethod" type="select" name="paymentMethod" placeholder="The payment method" v-model="order.paymentMethodId">
                <option v-for="paymentMethod in paymentMethods" :value="paymentMethod.id">{{ paymentMethod.name }}</option>
            </sw-field>
        </div>

        <div class="container--item">
            <sw-field label="Currency" id="currencyId" type="select" name="currencyId" v-model="order.currencyId">
                <option v-for="currency in currencies" :value="currency.id">{{ currency.name }}</option>
            </sw-field>
        </div>
    </div>

    <sw-loader v-if="isWorking"></sw-loader>
</sw-card>
