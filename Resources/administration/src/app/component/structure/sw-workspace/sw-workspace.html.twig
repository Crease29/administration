<div class="workspace-container">
    <div class="workspace--toolbar" :style="{ 'border-bottom-color': primaryColor }">

        <!-- Contains the name and icon of the parent root if defined -->
        <router-link :to="{ name: parentRoute }" v-if="parentRoute" :style="{ 'color': primaryColor }" class="toolbar--back-btn">
            <i class="chevron">&#8249;</i>
            <i :class="iconClassName"></i>
        </router-link>

        <!-- Mainly for primary actions like saving, canceling, etc. -->
        <slot name="header">
            <header class="toolbar--middle-section">
                <h1 class="workspace--headline">
                    {{ title }}
                </h1>
            </header>
        </slot>

        <slot name="header-tools"></slot>
    </div>

    <div class="workspace--content">
        <main class="content--main">
            <slot></slot>
        </main>
        <aside class="content--sidebar">
            <!-- <router-view name="sidebar"></router-view> -->
        </aside>
    </div>
</div>