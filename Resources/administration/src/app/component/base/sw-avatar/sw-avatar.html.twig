{% block sw_avatar %}
    <span class="sw-avatar"
          :style="[avatarImage, avatarColor, avatarSize, avatarInitialsSize]"
          ref="swAvatar"
          role="img">
        <slot>
            {% block sw_avatar_slot_default %}
                <span v-if="!userImage.length" class="sw-avatar__initials">
                    {{ avatarInitials }}
                </span>
            {% endblock %}
        </slot>
    </span>
{% endblock %}