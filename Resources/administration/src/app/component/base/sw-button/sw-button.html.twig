{% block sw_button %}
    {% block sw_button_link %}
        <router-link v-if="link.length"
                     :to="{ 'name': link }"
                     class="sw-button"
                     :class="buttonClasses">
            {% block sw_button_link_content %}
                <span class="sw-button__content">
                    <slot>{% block sw_button_link_slot_default %}{% endblock %}</slot>
                </span>
            {% endblock %}
        </router-link>
    {% endblock %}

    {% block sw_button_button %}
        <button class="sw-button"
                :class="buttonClasses"
                :disabled="disabled"
                v-on="$listeners"
                v-else>
            {% block sw_button_button_content %}
                <span class="sw-button__content">
                    <slot>{% block sw_button_button_slot_default %}{% endblock %}</slot>
                </span>
            {% endblock %}
        </button>
    {% endblock %}
{% endblock %}