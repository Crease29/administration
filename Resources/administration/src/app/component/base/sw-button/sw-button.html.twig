<div class="sw-button">
    <router-link v-if="link.length" :to="{ 'name': link }" :class="['sw-button--inner', isPrimary ? 'is--primary' : 'is--secondary']">
        <slot></slot>
    </router-link>

    <button :class="['sw-button--inner', isPrimary ? 'is--primary' : 'is--secondary']" :disabled="isDisabled" v-on="$listeners" v-else>
        <slot></slot>
    </button>
</div>