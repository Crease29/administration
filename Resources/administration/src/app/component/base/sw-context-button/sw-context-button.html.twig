{% block sw_context_button %}
    <div class="sw-context-button" @mouseenter="onToggleMenu" @mouseleave="onToggleMenu">
        {% block sw_context_button_icon %}
            <slot name="icon">
                <sw-icon :name="icon" decorative></sw-icon>
            </slot>
        {% endblock %}

        {% block sw_context_button_menu %}
            <div class="sw-context-button__menu" v-if="showMenu" :style="{ 'right': rightPos }">
                <slot>{% block sw_context_button_menu_slot_default %}{% endblock %}</slot>
            </div>
        {% endblock %}
    </div>
{% endblock %}