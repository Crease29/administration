{% block sw_condition_group %}
    <div class="sw-condition-group">
        {% block sw_condition_group_field_condition %}
            <div class="group-container field--condition">
                {% block sw_condition_group_field_condition_select %}
                    <select name="name" class="condition-group__field" ref="conditionTypeSelect">
                        {% block sw_condition_group_field_condition_select_option %}
                            <option v-for="innerCondition in conditionTypes"
                                    :selected="innerCondition.identifier === condition.type"
                                    value="innerCondition.identifier">
                                {{ innerCondition.label }}
                            </option>
                        {% endblock %}
                    </select>
                {% endblock %}
            </div>
        {% endblock %}

        {% block sw_condition_group_field_operator %}
            <div class="group-container field--operator">
                {% block sw_condition_group_field_operator_select %}
                    <select name="name" class="condition-group__field is--secondary">
                        <option value="">{{ condition.value.operator }}</option>
                    </select>
                {% endblock %}
            </div>
        {% endblock %}

        {% block sw_condition_group_field_value %}
            <div class="group-container field--value">
                {% block sw_condition_group_field_value_input %}
                    <input type="text" value="" v-bind:value="condition.value.amount" class="condition-group__field is--secondary">
                {% endblock %}
            </div>
        {% endblock %}

        {% block sw_condition_group_field_actions %}
            <div class="group-container field--actions">
                ...
            </div>
        {% endblock %}
    </div>
{% endblock %}