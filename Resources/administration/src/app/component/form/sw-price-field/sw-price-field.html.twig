{% block sw_price_field %}
    <div class="sw-price-field">

        {% block sw_price_field_gross %}
            <sw-field type="number"
                      name="priceGross"
                      label="Preis (Brutto)"
                      :suffix="currency.symbol"
                      min="0.00"
                      step="0.01"
                      :validation="validation"
                      @input="onPriceGrossChange"
                      @change="onPriceGrossChange"
                      v-bind="$attrs"
                      v-model="price.gross">
            </sw-field>
        {% endblock %}

        {% block sw_price_field_lock_button %}
            <button class="sw-price-field__lock" :class="{ 'is--locked': locked }" @click="onLockSwitch">
                <sw-icon name="default-lock-closed" size="16" v-if="locked"></sw-icon>
                <sw-icon name="default-lock-open" size="16 "v-else></sw-icon>
            </button>
        {% endblock %}

        {% block sw_price_field_net %}
            <sw-field type="number"
                      name="priceNet"
                      label="Preis (Netto)"
                      :suffix="currency.symbol"
                      min="0.00"
                      step="0.01"
                      :validation="validation"
                      @input="onPriceNetChange"
                      @change="onPriceNetChange"
                      v-bind="$attrs"
                      v-model="price.net">
            </sw-field>
        {% endblock %}
    </div>
{% endblock %}