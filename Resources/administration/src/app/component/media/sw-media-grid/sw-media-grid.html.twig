{% block sw_media_grid %}
    <div class="sw-media-grid" :class="mediaGridClasses" @mousedown.left="onMouseDown" >
        <slot name="content">
            {% block sw_media_grid_slot_content %}
                <div class="sw-media-grid__content"
                     :style="mediaColumnDefinitions">
                    {% block sw_media_grid_content_cell %}
                        <div class="sw-media-grid__content-cell"
                             v-for="item in items"
                             :key="item.key" >
                            {% block sw_media_grid_grid_item_components %}
                                {% block sw_media_grid_media_item_component %}
                                    <sw-media-grid-media-item
                                        v-if="item.type === 'media'"
                                        :containerOptions="containerOptions"
                                        :selected="isItemSelected(item)"
                                        :item="item"
                                        :showContextMenuButton="showContextMenuButton"
                                        @sw-media-grid-item-selection-add="handleSelection"
                                        @sw-media-grid-item-clicked="mediaItemClicked"
                                        @sw-media-grid-item-play="mediaItemPlayed"
                                        @sw-media-grid-item-selection-remove="removeFromSelection"
                                        v-on="$listeners">
                                    </sw-media-grid-media-item>
                                {% endblock %}

                                {% block sw_media_grid_catalog_item_component %}
                                    <sw-media-grid-catalog-item
                                        v-if="item.type === 'catalog'"
                                        :containerOptions="containerOptions"
                                        :selected="isItemSelected(item)"
                                        :item="item"
                                        @sw-media-grid-item-selection-add="handleSelection"
                                        @sw-media-grid-item-clicked="mediaItemClicked"
                                        @sw-media-grid-item-play="mediaItemPlayed"
                                        @sw-media-grid-item-selection-remove="removeFromSelection"
                                        v-on="$listeners">
                                    </sw-media-grid-catalog-item>
                                {% endblock %}
                            {% endblock %}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}
        </slot>
    </div>
{% endblock %}
