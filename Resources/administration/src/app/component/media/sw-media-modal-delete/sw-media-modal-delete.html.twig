{% block sw_media_modal_delete %}
    <sw-modal variant="small"
              class="sw-media-modal-delete"
              @closeModal="closeDeleteModal($event)"
              :title="$tc('global.sw-media-modal-delete.titleModal')">

        {% block sw_media_modal_body %}
            {{ $tc('global.sw-media-modal-delete.deleteMessage', itemsToDelete.length, { mediaName: this.mediaNameFilter(itemsToDelete[0]), count: itemsToDelete.length }) }}
        {% endblock %}

        {% block sw_media_modal_footer %}
            <template slot="modal-footer">

                {% block sw_media_modal_delete_cancel_button %}
                    <sw-button @click="closeDeleteModal($event)" size="small">
                        {{ $tc('global.sw-media-modal-delete.buttonCancel') }}
                    </sw-button>
                {% endblock %}

                {% block sw_media_modal_delete_confirm_button %}
                    <sw-button class="sw-media-modal-delete__confirm"
                               @click="deleteSelection($event)"
                               size="small"
                               variant="primary">
                        {{ $tc('global.sw-media-modal-delete.buttonDelete') }}
                    </sw-button>
                {% endblock %}

            </template>
        {% endblock %}
    </sw-modal>
{% endblock %}