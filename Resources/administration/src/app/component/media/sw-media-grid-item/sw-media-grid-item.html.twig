{%  block sw_media_grid_item %}
    <div class="sw-media-grid-item" :class="mediaItemClasses" @click.stop="emitClickedEvent">
        {% block sw_media_grid_item_content %}
            <div class="sw-media-grid-item__content" :class="mediaItemContentClasses">
                {% block sw_media_grid_item_preview %}
                    <slot name="media-item-preview"></slot>
                {% endblock %}

                {% block sw_media_grid_item_name_container %}
                    <div class="sw-media-grid-item__name-container">
                        {% block sw_media_grid_item_name %}

                            <slot name="media-item-name"></slot>
                        {% endblock %}
                    </div>
                {% endblock %}

                {% block sw_media_grid_item_context_menu %}
                    <sw-context-button v-if="showContextMenuButton" ref="swContextButton">
                        {% block sw_media_grid_item_context_items%}

                            <slot name="media-item-context-menu"></slot>
                        {% endblock %}
                    </sw-context-button>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}