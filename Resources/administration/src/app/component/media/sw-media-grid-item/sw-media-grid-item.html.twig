{%  block sw_media_grid_item %}
    <div class="sw-media-grid-item" :class="mediaItemClasses" v-on="gridItemListeners">
        {% block sw_media_grid_item_content %}
            <div class="sw-media-grid-item__content" :class="mediaItemContentClasses">
                {% block sw_media_grid_item_selection_condition %}
                    <div class="sw-media-grid-item__selected-indicator"
                         :class="selectedIndicatorClasses"
                         v-if="containerOptions.selectable && !isListItemPreview">

                        {% block sw_media_grid_item_selected_indicator %}
                            <sw-field type="checkbox" :value="selected" @click.self="doSelectItem"></sw-field>
                        {% endblock %}
                    </div>
                {% endblock %}

                {% block sw_media_grid_item_preview %}{% endblock %}

                {% block sw_media_grid_item_name_container %}
                    <div class="sw-media-grid-item__name-container">
                        {% block sw_media_grid_item_name %}
                            <div class="sw-media-grid-item__name">
                                {{ itemTitle }}
                            </div>
                        {% endblock %}
                    </div>
                {% endblock %}

                {% block sw_media_grid_item_details_condition %}
                    <div v-if="isListItemPreview">
                        {% block sw_media_grid_item_details%}{% endblock %}
                    </div>
                {% endblock %}

                {% block sw_media_grid_item_context_menu %}
                    <sw-context-button v-if="showContextMenuButton" ref="swContextButton">
                        {% block sw_media_grid_item_context_items%}{% endblock %}
                    </sw-context-button>
                {% endblock %}
            </div>
        {% endblock %}
    </div>
{% endblock %}