{%  block sw_media_grid_item %}
<div :class="mediaItemClass"
     v-on="gridItemListeners">
    {% block sw_media_grid_item_content %}
        <div :class="mediaItemContentClass">
            {% block sw_media_grid_item_content_selection_condition %}
                <div :class="mediaItemCheckboxClass"
                     v-if="containerOptions.selectable && !isListItemPreview">
                    {% block sw_media_grid_item_content_selection_identifier %}
                        <sw-field type="checkbox" :value="selected"></sw-field>
                    {% endblock %}
                </div>
            {% endblock %}

            {% block sw_media_grid_item_content_preview_container %}
                <div class="sw-media-grid-item__preview">
                    {% block sw_media_grid_item_content_preview %}
                        <sw-icon name="text-editor-media"
                                 class="sw-media-grid-item__centered-preview"
                                 size="50%">
                        </sw-icon>
                    {% endblock %}
                </div>
            {% endblock %}

            {% block sw_media_grid_item_content_item_name_container %}
                <div class="sw-media-grid-item__name-container">
                    {% block sw_media_grid_item_content_item_name %}
                        <div class="sw-media-grid-item__name">
                            {{ itemTitle }}
                        </div>
                    {% endblock %}
                </div>
            {% endblock %}

            {% block sw_media_grid_item_content_details_condition %}
                <div v-if="isListItemPreview">
                    {% block sw_media_grid_item_content_details%}{% endblock %}
                </div>
            {% endblock %}

            {% block sw_media_grid_item_content_context_menu %}
                <div class="sw-media-grid-item__context-button">
                    <sw-context-button>
                        {% block sw_media_grid_item_context_items%}{% endblock %}
                    </sw-context-button>
                </div>
            {% endblock %}
        </div>
    {% endblock %}
</div>
{% endblock %}