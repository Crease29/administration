{% block sw_sidebar_media_item %}
    <sw-sidebar-item
        class="sw-sidebar-media-item"
        icon="default-object-image"
        :title="$tc('global.sw-sidebar-media-item.title')"
        :disabled="!catalog"
        ref="sidebarItem">

        {% block sw_sidebar_media_item_content %}
            <div class="sw-sidebar-media-item__content">
                {% block sw_sidebar_media_item_search_field %}
                    <div class="sw-sidebar-media-item__search-field">
                        <sw-field
                            class="sw-sidebar-media-item__search-input"
                            v-model="term"
                            :placeholder="$tc('global.sw-sidebar-media-item.placeholderSearch')"
                            @input="onSearchInput">
                        </sw-field>
                        <sw-icon class="sw-sidebar-media-item__search-icon" name="small-search" small></sw-icon>
                    </div>
                {% endblock %}

                {% block sw_sidebar_media_item_catalog_headline %}
                    <aside v-if="catalog" class="sw-sidebar-media-item__catalog-headline">
                        <sw-icon class="sw-sidebar-media-item__folder-thumbnail" name="folder-thumbnail" multicolor size="32px"></sw-icon>
                        <h4>{{ catalog.name }}</h4>
                    </aside>
                {% endblock %}

                {% block sw_sidebar_media_item_media_item_list %}
                    <sw-media-grid-media-item
                        v-for="mediaItem in mediaItems"
                        :key="mediaItem.id"
                        :item="mediaItem"
                        :showSelectionIndicator="false"
                        :showContextMenuButton="true"
                        :selected="false"
                        :isList="true"
                        @sw-media-grid-media-item-delete="handleMediaGridItemDelete">

                        {% block sw_sidebar_media_item_context_item_add_to_product %}
                            <sw-context-menu-item slot="additional-context-menu-items" @click="addItemToProduct(mediaItem)">
                                {{ $tc('global.sw-media-grid-media-item.contextMenuAddToProductLabel') }}
                            </sw-context-menu-item>
                        {% endblock %}
                    </sw-media-grid-media-item>

                    {% block sw_sidebar_media_item_load_more_button %}
                        <sw-button
                            size="small"
                            block
                            v-if="showMore"
                            @click="onLoadMore"
                            class="sw-sidebar-media-item__load-more-button">

                            {{ $tc('global.sw-sidebar-media-item.labelLoadMore') }}
                        </sw-button>
                    {% endblock %}
                {% endblock %}

                {% block sw_sidebar_media_item_loader %}
                    <sw-loader v-if="isLoading"></sw-loader>
                {% endblock %}
            </div>
        {% endblock %}
    </sw-sidebar-item>
{% endblock %}