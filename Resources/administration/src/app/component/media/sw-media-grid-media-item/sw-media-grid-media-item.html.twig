{% block sw_media_grid_item_preview %}
    <sw-media-preview :item="item" @sw-media-preview-play="emitPlayEvent">
    </sw-media-preview>
{% endblock %}

{% block sw_media_grid_item_name %}
    <input v-if="containerOptions.editable"
        type="text"
        ref="inputItemName"
        tabindex="-1"
        :value="item.name"
        :disabled="true"
        @keydown.enter="emitNameChanged"
        @keydown.esc="cancelInlineEdit"
        @blur="cancelInlineEditFromBlur">

    <div v-else>
        {{ itemTitle }}
    </div>
{% endblock %}

{% block sw_media_grid_item_context_items%}
    {% block sw_media_griditem_context_item_detail %}
        <sw-context-menu-item @click="showItemDetails">
            {{ $tc('global.sw-media-grid-media-item.contextMenuDetailLabel') }}
        </sw-context-menu-item>
    {% endblock %}

    <div class="sw-context-menu__group">
        {% block sw_media_griditem_context_item_copy_item_link %}
            <sw-context-menu-item @click="copyItemLink">
                {{ $tc('global.sw-media-grid-media-item.contextMenuCopyLinkLabel') }}
            </sw-context-menu-item>
        {% endblock %}

        {% block sw_media_griditem_context_item_replace %}
            <sw-context-menu-item @click="replaceItem">
                {{ $tc('global.sw-media-grid-media-item.contextMenuReplaceLabel') }}
            </sw-context-menu-item>
        {% endblock %}

        {% block sw_media_griditem_context_item_delete %}
            <sw-context-menu-item @click="deleteItem" variant="danger">
                {{ $tc('global.sw-media-grid-media-item.contextMenuDeleteLabel') }}
            </sw-context-menu-item>
        {% endblock %}
    </div>
{% endblock %}