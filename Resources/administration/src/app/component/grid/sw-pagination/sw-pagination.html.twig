<div class="sw-pagination">

    <button class="btn--first-page" :disabled="page === 1" @click="firstPage">
        <sw-icon name="default-arrow-simple-left" small />
    </button>

    <button class="btn--prev-page" :disabled="page === 1" @click="prevPage">
        <sw-icon name="small-arrow-medium-left" small />
    </button>

    <div class="page-selection">
        Page
        <input type="number" class="page-selection--field" name="current-page-number" min="1" :max="maxPage" v-model="currentPage" @change="pageChange">
        of <span class="number">{{ maxPage }}</span>
    </div>

    <button class="btn--next-page" :disabled="page === maxPage" @click="nextPage">
        <sw-icon name="small-arrow-medium-right" small />
    </button>

    <button class="btn--last-page" :disabled="page === maxPage" @click="lastPage">
        <sw-icon name="default-arrow-simple-right" small />
    </button>

    <button class="btn--refresh" @click="refresh">
        <sw-icon name="default-arrow-360-left" small />
    </button>

    <div class="per-page">
        Items per page:
        <select class="per-page--select" :value="perPage" v-model="perPage" @change="pageChange">
            <option v-for="step in steps" :value="step">
                {{ step }}
            </option>
        </select>
    </div>

    <div class="page-total">
        Items total: <span class="number">{{ total }}</span>
    </div>
</div>